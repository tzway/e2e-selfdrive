// .devcontainer/devcontainer.json
{
	"name": "e2e dev",
	"image": "mcr.microsoft.com/devcontainers/python:1-3.7-buster",
	// 允许容器访问主机 GPU
	"runArgs": [
		"--gpus=all"
	],
	// 容器启动后执行的命令
	"postCreateCommand": "sudo apt update && sudo apt install -y libgl1-mesa-glx && pip install opencv-contrib-python numpy matplotlib tensorflow keras python-engineio==3.13.2 python-socketio==4.6.1 Flask eventlet scikit-learn notebook imgaug pandas",
	// 可选：开放端口（如果你有 Flask 服务等）
	// "forwardPorts": [5000],
	// 你可以启用 root 权限执行（不推荐长期这样）
	// "remoteUser": "root"
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter"
			]
		}
	}
}